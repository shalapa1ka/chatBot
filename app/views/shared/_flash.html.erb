<% flash.each do |k, v| %>
  <%= tag.div class: "alert alert-#{k} mt-3 d-flex justify-content-between", role: 'alert',
              data: { controller: 'removals' } do %>
    <%= v %>
    <i class="ml-5 bi bi-x-circle" style="cursor: pointer" data-action="click->removals#remove"></i>
  <% end %>
<% end %>