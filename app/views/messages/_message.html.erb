<%= turbo_frame_tag message do %>
  <%= tag.div class: "row mb-3 bg-dark bg-opacity-50" do %>
    <div class="col-1"><%= message.user.name %></div>
    <p class="col-9" style="word-wrap: break-word;"><%= message.body %></p>
    <div class="col-2"><%= l message.created_at, format: :short %></div>
  <% end %>
<% end %>


