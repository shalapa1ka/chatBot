<%= turbo_frame_tag message do %>
  <%= form_with model: message do |f| %>
    <%= render 'shared/errors', object: message %>

    <%= f.hidden_field :chat_id, value: message.chat.id %>

    <div class="col-sm-10 input-group 1 mb-5">
      <%= f.text_area :body, class: 'form-control', id: "floatingInput", placeholder: "Write your question", autofocus: true %>
      <button type="submit" class="btn btn-outline-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
          <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"></path>
        </svg>
        <span class="visually-hidden">Button</span>
      </button>
    </div>

  <% end %>
<% end %>